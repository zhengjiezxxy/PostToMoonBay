{
  "manifest_version": 2,

  "name": "PostToMoonBay",
  "description": "This extension is for posting articles on any webpages to a website",
  "short_name": "PTMB",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "http://*/*/",
    "https://*/*",
    "cookies"
    ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action":{
    "default_icon": "moonbay.png",
    "default_title": "Post To MoonBay"
  }

}
